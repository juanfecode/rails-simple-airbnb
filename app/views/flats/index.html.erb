<nav>
  <div class="container d-flex justify-content-end">
    <div>
      <%= link_to "New Flat", new_flat_path, class: "btn btn-success" %>
    </div>
    <div class="d-flex">
      <%= simple_form_for(:query, url: flats_path, method: :get) do |f| %>
        <%= f.input :search %>
        <%= f.submit "Search", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>

</nav>
<h1>All our Flats </h1>

<% @flats.each do |flat| %>
  <p><%=link_to flat.name, flat_path(flat)%></p>
  <p><%= flat.address %></p>
  <p><%= flat.description %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <%= link_to "DELETE", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"  %>
<% end %>
